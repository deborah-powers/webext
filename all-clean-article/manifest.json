{
	"manifest_version": 2,
	"name": "nettoyeur d'articles",
	"version": "1.1",
	"description": "nettoyer mes pages web",
	"icons": { "48": "icon-128.svg" },
	"background": { "scripts": [ "service-worker-v2.js" ]},
	"permissions": [ "tabs", "activeTab", "scripting", "http://deborah-powers.fr/", "http://localhost:1407/" ],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; object-src 'self';",
	"browser_action": {
		"default_icon": "icon-128.svg",
		"default_title": "nettoyeur d'articles"
	},
	"content_scripts" : [{
		"matches": [ "http://localhost/*" ],
		"js": [ "import-perso.js", "showPage.js" ]
	},{
		"matches": [ "http://*/*?retour", "https://*/*?retour" ],
		"js": [ "import-perso.js", "cleanArticle.js", "cleanAction.js" ]
	}],
	"browser_specific_settings": { "gecko": { "id": "nettoyeur@deborah-powers.fr" }}
}