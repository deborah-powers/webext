{
	"manifest_version": 2,
	"name": "to markdown",
	"version": "1.0",
	"description": "appliquer un markdown maison sur mes fichiers textes",
	"icons": { "48": "icon-128.svg" },
	"permissions": [ "tabs", "activeTab", "scripting", "http://deborah-powers.fr/", "file:///" ],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; object-src 'self'",
	"content_scripts": [{
		"matches": [ "file:///*/rgaa*grille.txt", "file:///*/rgaa*grille.md", "http://*/rgaa*grille.txt", "https://*/rgaa*grille.txt", "http://*/rgaa*grille.md", "https://*/rgaa*grille.md" ],
		"js": [ "import-perso.js", "action-rgaa-grille.js" ]
	}, {
		"matches": [ "file:///*/*.txt", "file:///*/*.md", "http://*/*.txt", "https://*/*.txt", "http://*/*.md", "https://*/*.md" ],
		"exclude_matches": [ "file:///*/rgaa*grille.txt", "file:///*/rgaa*grille.md", "http://*/rgaa*grille.txt", "https://*/rgaa*grille.txt", "http://*/rgaa*grille.md", "https://*/rgaa*grille.md" ],
		"js": [ "import-perso.js", "action-common.js" ]
	}],
	"browser_specific_settings": { "gecko": { "id": "md-perso@deborah-powers.fr" }}
}
