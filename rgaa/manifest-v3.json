{
	"manifest_version": 3,
	"name": "afficher popup",
	"version": "1.0",
	"description": "afficher une popup avec un manifest v3",
	"icons": { "48": "icon-128.png" },
	"externally_connectable": { "matches": [ "<all_urls>" ]},
	"permissions": [ "tabs", "activeTab", "scripting" ],
	"web_accessible_resources": [{
		"resources": [ "color-style.css", "color-script.js", "color-modal.js" ],
		"matches": [ "<all_urls>" ]
	}],
	"action": {
		"default_icon": { "48": "icon-128.png" },
		"default_title": "afficher la popup",
		"default_popup": "popup.html"
	}
}